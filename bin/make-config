#!/usr/bin/env node

const fs = require('fs');
const minimist = require('minimist');
const path = require('path');

let args = minimist(process.argv, {
    'default': {dir: path.dirname(__dirname),
                livereload: false, sync: false, for_web: false},
    'alias': {d: 'dir'},
    'boolean': ['livereload', 'sync', 'for_web']
});

var content = `
use_livereload = ${args.livereload};
use_sync = ${args.sync};
for_web = ${args.for_web};
`;
fs.writeFile(path.join(args.dir, 'js', 'config.js'), content, function(err) {
    if (err) {
        console.error(err);
    }
});
