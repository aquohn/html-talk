extends layout.pug

//- Small helper for formatting citations
mixin ref(name, href)
  span.cite
    | [
    a(href=href)= name
    | ]

block title
  title Title tag for the slides

block slides
  section
    h1 A Cool Title

    p.for-web(style="font-size: 80%").
      (Swipe or arrow keys to move through slides; `m` for a menu to jump; `?` to show more.)
    
  section
    p This is the first slide.
    aside.notes Hi there!

  section
    h2 Slide 2
    ul
      li
        | Future work:
        ul
          li Add speech recognition &rarr; image search &rarr; display
          ul: li.
            Like Instant-Presentation
            #[+ref("McCann SIGBOVIK-12", "https://github.com/ixchow/Instant-Presentation")]
            and Last-Second-Slides
            #[+ref("Mailhot/Hume TerribleHacks-16", "https://github.com/trishume/LastSecondSlides")]

    span.fragment $$ \int \sum e_i \otimes k(x, \cdot) $$

  section
    h2 More Complicated

    div(style="width: 60%; position: absolute; left: 0").
      \begin{align}
        f &= \sum_{j=1}^{12} j e^{\pi \mathbb{i}} \\
        &\fragment[3]{= -\sum_{j=1}^{12} j} \\
        &\fragment[5]{= - \frac{12}{2} (12 + 1)} \\
        &\fragment[6]{= - 6 \cdot 13} \\
        &\fragment[7]{= -78}
      \end{align}

    div(style="width: 30%; position: absolute; left: 65%")
      p.fragment(data-fragment-index=2) Remember:
      p.fragment(data-fragment-index=2) $e^{\pi \mathbb{i}} = -1$
      p.fragment(data-fragment-index=4).
        $\sum_{j=1}^b j = \frac{b (b + 1)}{2}$
